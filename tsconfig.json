{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/core/*": ["./core/*"],
      "@/store/*": ["./store/*"],
      "@/config/*": ["./config/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "core/**/*", "store/**/*", "utils/**/*"],
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
